<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnWithMeMa">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_background"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/back_button_image" />
            <TextView
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Language"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </LinearLayout>
        <Button
            android:id="@+id/greeting"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/home_section_bg"
            android:drawableRight="@drawable/trust"
            android:onClick="showList"
            android:text="Greetings"
            android:textColor="#707070"
            android:textSize="25sp" />
        <Button
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/home_section_bg"
            android:drawableRight="@drawable/fast_food"
            android:onClick="showList"
            android:text="food"
            android:textColor="#707070"
            android:textSize="25sp"
            android:drawableEnd="@drawable/fast_food" />
        <Button
            android:id="@+id/living"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/home_section_bg"
            android:drawableRight="@drawable/home"
            android:onClick="showList"
            android:text="living"
            android:textColor="#707070"
            android:textSize="25sp"
            android:drawableEnd="@drawable/home" />
        <Button
            android:id="@+id/travel"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/home_section_bg"
            android:drawableRight="@drawable/airplane"
            android:onClick="showList"
            android:text="Travel"
            android:textColor="#707070"
            android:textSize="25sp"
            android:drawableEnd="@drawable/airplane" />
        <Button
            android:id="@+id/emergency"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/home_section_bg"
            android:drawableRight="@drawable/ambulance"
            android:onClick="showList"
            android:text="Emergency"
            android:textColor="#707070"
            android:textSize="25sp"
            android:drawableEnd="@drawable/ambulance" />
    </LinearLayout>
</ScrollView>