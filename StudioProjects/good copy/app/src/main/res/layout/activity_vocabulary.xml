<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vocabulary"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:background="#4A6BFB">

            <ImageButton
                android:id="@+id/back_button_phrase"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:src="@drawable/back_button_image" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:text="Description"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#ffffff">
            </TextView>

        </LinearLayout>

        <ImageButton
            android:id="@+id/mema"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mema"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center">
        </ImageButton>

        <TextView
            android:id="@+id/zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="60sp"
            android:layout_marginBottom="20dp">
        </TextView>

        <TextView
            android:id="@+id/en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="40sp">
        </TextView>

        <TextView
            android:id="@+id/sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="20sp">
        </TextView>

<!--        <ImageButton-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/star_grey"-->
<!--            android:layout_marginTop="40dp"-->
<!--            android:layout_marginBottom="40dp"-->
<!--            android:layout_gravity="center">-->
<!--        </ImageButton>-->

        <Button
            android:id="@+id/gotIt"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ok, I got it."
            android:background="@drawable/button_radius"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_marginTop="100dp">
        </Button>


    </LinearLayout>

</LinearLayout>